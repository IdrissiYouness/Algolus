<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:contentDescription="ADD"
        android:text="DEMANDEZ DEVIS"
        android:fontFamily="@font/nunito_bold"
        app:fabSize="normal"
        app:icon="@drawable/ic_interface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            tools:context=".HomeFragment">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/blue_100"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/numbers_count_layout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">


                <TextView
                    android:id="@+id/txt_footer_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/nunito_bold"
                    android:gravity="left"
                    android:text="Trouvez la solution parfaite pour votre entreprise "
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_footer_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_bold"
                    android:gravity="center"
                    android:text="confiez-vous à notre équipe pour réussir votre projet digital"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="@+id/txt_footer_1"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@+id/txt_footer_1"
                    app:layout_constraintTop_toBottomOf="@+id/txt_footer_1" />

                <Button
                    android:id="@+id/devisButton0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/nunito_bold"
                    android:text="DEVIS GRATUIT"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@+id/txt_footer_2"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_footer_2" />

                <Button
                    android:id="@+id/contact_button0"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_bold"
                    android:text="CONTACTEZ-nous"
                    app:layout_constraintEnd_toEndOf="@+id/devisButton0"
                    app:layout_constraintStart_toStartOf="@+id/devisButton0"
                    app:layout_constraintTop_toBottomOf="@id/devisButton0" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/services_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text=" ALGOLUS"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/blue_700"
                android:textSize="30sp"
                android:textStyle="bold"
                android:fontFamily="@font/nunito_extrabold"
                app:layout_constraintEnd_toStartOf="@id/services_txt1"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="72dp"
                app:layout_constraintBottom_toBottomOf="@+id/services_txt1"/>

            <TextView
                android:id="@+id/services_txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="8dp"
                android:text="SERVICES"
                android:fontFamily="@font/nunito_extrabold"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/orange_500"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/services_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@+id/services_txt"
                app:layout_constraintTop_toTopOf="@+id/services_txt" />

            <TextView
                android:id="@+id/bienvenu_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="BIENVENU"
                android:fontFamily="@font/nunito_extrabold"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/blue_700"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/services_txt"
                app:layout_constraintStart_toStartOf="@+id/services_txt"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="36dp"
                android:src="@drawable/greatings_icon"
                app:layout_constraintBottom_toTopOf="@+id/services_txt"
                app:layout_constraintStart_toEndOf="@+id/bienvenu_txt"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/services_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/nunito_extrabold"
                android:text="NOS Services"
                android:textAllCaps="true"
                android:textColor="@color/blue_600"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/horizontal_scrollview_services"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_slider" />

            <HorizontalScrollView
                android:id="@+id/horizontal_scrollview_services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:scrollbars="none"
                app:layout_constraintTop_toBottomOf="@+id/services_title"
                tools:layout_editor_absoluteY="169dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/web_service_card"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="6dp"
                        android:clickable="true"
                        >
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/blue_50">
                            <ImageView
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:src="@drawable/webservice_ic"
                                android:id="@+id/webservice_ic"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginTop="10dp"/>

                            <TextView
                                android:id="@+id/creation_txt_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_black"
                                android:text="Creation de"
                                android:textColor="@color/blue_800"
                                app:layout_constraintEnd_toEndOf="@+id/webservice_ic"
                                app:layout_constraintStart_toStartOf="@+id/webservice_ic"
                                app:layout_constraintTop_toBottomOf="@+id/webservice_ic" />

                            <TextView
                                android:id="@+id/creation_txt_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_black"
                                android:text="site Web"
                                android:textColor="@color/blue_800"
                                app:layout_constraintEnd_toEndOf="@+id/creation_txt_1"
                                app:layout_constraintStart_toStartOf="@+id/creation_txt_1"
                                app:layout_constraintTop_toBottomOf="@+id/creation_txt_1" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/developement_spe_card"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="6dp" >
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/blue_50">
                            <ImageView
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:src="@drawable/developement_spe_ic"
                                android:id="@+id/developement_spe_ic"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginTop="10dp"/>

                            <TextView
                                android:id="@+id/dev_txt_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_black"
                                android:text="Developpement"
                                android:textColor="@color/blue_800"
                                app:layout_constraintEnd_toEndOf="@+id/developement_spe_ic"
                                app:layout_constraintStart_toStartOf="@+id/developement_spe_ic"
                                app:layout_constraintTop_toBottomOf="@+id/developement_spe_ic" />

                            <TextView
                                android:id="@+id/dev_txt_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_black"
                                android:text="spécifique"
                                android:textColor="@color/blue_800"
                                app:layout_constraintEnd_toEndOf="@+id/dev_txt_1"
                                app:layout_constraintStart_toStartOf="@+id/dev_txt_1"
                                app:layout_constraintTop_toBottomOf="@+id/dev_txt_1" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/maintenace_card"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="6dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/blue_50">

                            <ImageView
                                android:id="@+id/maintenance_ic"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/maintenance_ic"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/maint_txt_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="25dp"
                                android:fontFamily="@font/nunito_black"
                                android:text="Maintenance"
                                android:textColor="@color/blue_800"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="@+id/maintenance_ic"
                                app:layout_constraintStart_toStartOf="@+id/maintenance_ic"
                                app:layout_constraintTop_toBottomOf="@+id/maintenance_ic" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/strategie_card"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="6dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/blue_50">

                            <ImageView
                                android:id="@+id/straterie_ic"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/straterie_digital_ic"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/strategie_txt_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_black"
                                android:text="Strategie"
                                android:textColor="@color/blue_800"
                                app:layout_constraintEnd_toEndOf="@+id/straterie_ic"
                                app:layout_constraintStart_toStartOf="@+id/straterie_ic"
                                app:layout_constraintTop_toBottomOf="@+id/straterie_ic" />

                            <TextView
                                android:id="@+id/strategie_txt_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_black"
                                android:text="digitale"
                                android:textColor="@color/blue_800"
                                app:layout_constraintEnd_toEndOf="@+id/strategie_txt_1"
                                app:layout_constraintStart_toStartOf="@+id/strategie_txt_1"
                                app:layout_constraintTop_toBottomOf="@+id/strategie_txt_1" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/comm_management_card"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="6dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/blue_50">

                            <ImageView
                                android:id="@+id/comm_management_ic"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/comm_management"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/comm_txt_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_black"
                                android:text="Community"
                                android:textColor="@color/blue_800"
                                app:layout_constraintEnd_toEndOf="@+id/comm_management_ic"
                                app:layout_constraintStart_toStartOf="@+id/comm_management_ic"
                                app:layout_constraintTop_toBottomOf="@+id/comm_management_ic" />

                            <TextView
                                android:id="@+id/comm_txt_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_black"
                                android:text="management"
                                android:textColor="@color/blue_800"
                                app:layout_constraintEnd_toEndOf="@+id/comm_txt_1"
                                app:layout_constraintStart_toStartOf="@+id/comm_txt_1"
                                app:layout_constraintTop_toBottomOf="@+id/comm_txt_1" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/seo_card"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="6dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/blue_50">

                            <ImageView
                                android:id="@+id/seo_ic"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/seo_ic"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/seo_txt_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_black"
                                android:text="Referencement"
                                android:textColor="@color/blue_800"
                                app:layout_constraintEnd_toEndOf="@+id/seo_ic"
                                app:layout_constraintStart_toStartOf="@+id/seo_ic"
                                app:layout_constraintTop_toBottomOf="@+id/seo_ic" />

                            <TextView
                                android:id="@+id/seo_txt_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_black"
                                android:text="SEO"
                                android:textColor="@color/blue_800"
                                app:layout_constraintEnd_toEndOf="@+id/seo_txt_1"
                                app:layout_constraintStart_toStartOf="@+id/seo_txt_1"
                                app:layout_constraintTop_toBottomOf="@+id/seo_txt_1" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/about_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/nunito_extrabold"
                android:text="A Propos de nous"
                android:textAllCaps="true"
                android:textColor="@color/blue_600"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/horizontal_scrollview_services" />

            <TextView
                android:id="@+id/Algolus_from_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="algolus ?"
                android:fontFamily="@font/nunito_bold"
                android:textAllCaps="true"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/about_title"
                app:layout_constraintTop_toBottomOf="@+id/about_title"
                android:layout_marginStart="10dp"
                android:textColor="@color/orange_500"/>

            <TextView
                android:id="@+id/about_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_regular"
                android:text="@string/about_section"
                android:textColor="@color/black"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Algolus_from_about" />

            <LinearLayout
                android:id="@+id/numbers_count_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/about_section">

                <androidx.cardview.widget.CardView
                    android:layout_width="130dp"
                    android:layout_height="120dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp"
                    >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/blue_100">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="16dp"
                            android:src="@drawable/ic_paint_roller"
                            app:layout_constraintBottom_toTopOf="@+id/number_count_txt"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/employees_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="EMPLOYEES"
                            android:textSize="10sp"
                            android:fontFamily="@font/nunito_bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/number_count_txt"
                            app:layout_constraintStart_toStartOf="@+id/number_count_txt"
                            app:layout_constraintTop_toBottomOf="@+id/number_count_txt" />

                        <TextView
                            android:id="@+id/number_count_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20"
                            android:textColor="@color/black"
                            android:fontFamily="@font/nunito_bold"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="@+id/imageView2"
                            app:layout_constraintStart_toStartOf="@+id/imageView2"
                            app:layout_constraintTop_toBottomOf="@id/imageView2" />

                        <TextView
                            android:id="@+id/plus_sign_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+"
                            android:textColor="@color/orange_500"
                            android:fontFamily="@font/nunito_bold"
                            app:layout_constraintStart_toEndOf="@+id/number_count_txt"
                            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="130dp"
                    android:layout_height="120dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/blue_100">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="16dp"
                            android:src="@drawable/ic_rocket_lunch"
                            app:layout_constraintBottom_toTopOf="@+id/number_count_txt2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/projects_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="PROJECTS"
                            android:textSize="10sp"
                            android:fontFamily="@font/nunito_bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/number_count_txt2"
                            app:layout_constraintStart_toStartOf="@+id/number_count_txt2"
                            app:layout_constraintTop_toBottomOf="@+id/number_count_txt2" />

                        <TextView
                            android:id="@+id/number_count_txt2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="150"
                            android:fontFamily="@font/nunito_bold"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
